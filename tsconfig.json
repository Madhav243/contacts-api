{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"typeRoots": [
			"./src/types",
			"./node_modules/@types",
		]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}